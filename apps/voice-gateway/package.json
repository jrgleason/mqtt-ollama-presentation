{
  "name": "voice-gateway",
  "version": "1.0.0",
  "description": "Voice command gateway with wake word detection and speech-to-text",
  "main": "dist/main.js",
  "type": "module",
  "scripts": {
    "dev": "ts-node --esm src/main.ts",
    "build": "tsc",
    "start": "node dist/main.js",
    "setup": "node scripts/setup.js",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "lint": "eslint src/**/*.ts",
    "type-check": "tsc --noEmit"
  },
  "keywords": [
    "voice",
    "speech-to-text",
    "wake-word",
    "mqtt",
    "home-automation"
  ],
  "author": "",
  "license": "MIT",
  "dependencies": {
    "@picovoice/porcupine-node": "latest",
    "mqtt": "latest",
    "uuid": "latest",
    "wav": "latest",
    "dotenv": "latest"
  },
  "devDependencies": {
    "@types/jest": "latest",
    "@types/node": "latest",
    "@types/uuid": "latest",
    "@types/wav": "latest",
    "@typescript-eslint/eslint-plugin": "latest",
    "@typescript-eslint/parser": "latest",
    "eslint": "latest",
    "jest": "latest",
    "ts-jest": "latest",
    "ts-node": "latest",
    "typescript": "latest"
  },
  "engines": {
    "node": ">=20.0.0"
  }
}
