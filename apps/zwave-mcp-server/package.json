{
  "name": "zwave-mcp-server",
  "version": "1.0.0",
  "description": "Custom MCP server for Z-Wave device control via MQTT",
  "type": "module",
  "main": "src/index.js",
  "exports": {
    ".": "./src/index.js",
    "./client": "./src/mcp-client.js"
  },
  "scripts": {
    "start": "node src/index.js",
    "inspector": "npx @modelcontextprotocol/inspector node src/index.js",
    "test": "node --experimental-vm-modules node_modules/jest/bin/jest.js",
    "test:watch": "node --experimental-vm-modules node_modules/jest/bin/jest.js --watch"
  },
  "keywords": [
    "mcp",
    "zwave",
    "mqtt",
    "home-automation"
  ],
  "author": "",
  "license": "GPL-3.0",
  "dependencies": {
    "@modelcontextprotocol/sdk": "latest",
    "dotenv": "latest",
    "mqtt": "latest",
    "node-fetch": "latest",
    "socket.io-client": "latest",
    "zod": "latest"
  },
  "devDependencies": {
    "jest": "^29.7.0"
  }
}
