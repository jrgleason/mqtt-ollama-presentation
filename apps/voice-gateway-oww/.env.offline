# =============================================================================
# Offline Demo Mode - No Internet Required
# =============================================================================
# AI Provider: Ollama (local)
# TTS Provider: Piper (local)
# Dependencies: Ollama running, Python 3 + piper-tts
# Use Case: Full privacy, no internet, completely local processing

# Node Environment
NODE_ENV=development

# Logging
LOG_LEVEL=info

# OpenWakeWord Configuration
OWW_MODEL_PATH=jarvis
OWW_THRESHOLD=0.01
OWW_INFERENCE_FRAMEWORK=onnx

# Audio Configuration
AUDIO_MIC_DEVICE=hw:2,0
AUDIO_SPEAKER_DEVICE=hw:2,0
AUDIO_SAMPLE_RATE=16000
AUDIO_CHANNELS=1
BEEP_VOLUME=0.3

# Voice Activity Detection (VAD)
VAD_TRAILING_SILENCE_MS=1500
VAD_MAX_UTTERANCE_MS=10000

# Whisper Speech-to-Text
WHISPER_MODEL=tiny
WHISPER_MODEL_PATH=models/ggml-tiny.bin

# MQTT Broker
MQTT_BROKER_URL=mqtt://localhost:1883
MQTT_CLIENT_ID=voice-gateway-oww
MQTT_USERNAME=
MQTT_PASSWORD=

# Health Check
HEALTHCHECK_PORT=3002

# MCP Server Retry Configuration
MCP_RETRY_ATTEMPTS=3
MCP_RETRY_BASE_DELAY=2000

# =============================================================================
# AI PROVIDER CONFIGURATION - OFFLINE MODE (Ollama)
# =============================================================================
AI_PROVIDER=ollama

# Ollama AI Configuration (Local AI)
OLLAMA_BASE_URL=http://localhost:11434
OLLAMA_MODEL=qwen3:0.6b

# Ollama Performance Optimization Settings
# Optimized for voice interactions: small context, low temperature, always loaded
OLLAMA_NUM_CTX=2048
OLLAMA_TEMPERATURE=0.5
OLLAMA_KEEP_ALIVE=-1

# Anthropic (not used in offline mode, but keeping placeholders)
ANTHROPIC_API_KEY=your_anthropic_api_key_here
ANTHROPIC_MODEL=claude-3-5-haiku-20241022

# =============================================================================
# TEXT-TO-SPEECH CONFIGURATION - OFFLINE MODE (Piper)
# =============================================================================
TTS_PROVIDER=Piper

# Common TTS Settings
TTS_ENABLED=true
TTS_VOLUME=1.0
TTS_SPEED=1.0

# Piper TTS Configuration (Local/Offline TTS)
TTS_MODEL_PATH=models/piper/en_US-amy-medium.onnx

# ElevenLabs (not used in offline mode, but keeping placeholders)
ELEVENLABS_API_KEY=your_api_key_here
ELEVENLABS_VOICE_ID=JBFqnCBsd6RMkjVDRZzb
ELEVENLABS_MODEL_ID=eleven_multilingual_v2
ELEVENLABS_STABILITY=0.5
ELEVENLABS_SIMILARITY_BOOST=0.75
ELEVENLABS_STYLE=0.0
ELEVENLABS_USE_SPEAKER_BOOST=true

# Z-Wave MCP Server Configuration
ZWAVE_UI_URL=http://localhost:8091
ZWAVE_UI_AUTH_ENABLED=false
ZWAVE_UI_USERNAME=
ZWAVE_UI_PASSWORD=
ZWAVE_UI_SOCKET_TIMEOUT_MS=30000

# =============================================================================
# WEB SEARCH FALLBACK CONFIGURATION - DISABLED FOR OFFLINE MODE
# =============================================================================
# Web search requires internet access, so disabled in offline mode
WEB_SEARCH_FALLBACK_ENABLED=false
WEB_SEARCH_FALLBACK_TIMEOUT=10000
