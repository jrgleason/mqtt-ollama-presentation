{
  "compilerOptions": {
    "target": "ES2020",
    "module": "ES2020",
    "moduleResolution": "Node",
    "allowSyntheticDefaultImports": true,
    "baseUrl": ".",
    "checkJs": false,
    "paths": {
      "@/*": [
        "src/*"
      ]
    }
  },
  "include": [
    "apps/**/*",
    "types/**/*",
    "apps/**/src/**/*",
    "apps/**/index.js"
  ],
  "exclude": [
    "node_modules",
    "dist"
  ]
}

